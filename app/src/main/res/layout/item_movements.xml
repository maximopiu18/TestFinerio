<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/item_movements_linear_main"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:background="@drawable/background_border_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@color/blanco"
            android:padding="16dp"
            android:src="@drawable/ic_money"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_movements_tv_concepto"
                android:maxLines="1"
                android:lines="1"
                android:textSize="22dp"
                android:textColor="@color/blanco"
                android:text="Pago de luz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_movements_tv_fecha"
                android:maxLines="1"
                android:lines="1"
                android:textSize="18dp"
                android:textColor="@color/blanco"
                android:text="Fecha: 22-AUG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_movements_tv_monto"
                android:textStyle="bold"
                android:maxLines="1"
                android:lines="1"
                android:textSize="18dp"
                android:textColor="@color/blanco"
                android:text="Monto: $200.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
